<h2 class="text-3xl font-extrabold text-center text-blue-700 mb-6">
  ЁЯФР Admin Login
</h2>

<% if flash[:alert] %>
  <div class="bg-red-100 border border-red-400 text-red-700 px-6 py-4 rounded-lg mb-6">
    <p class="font-medium">тЪая╕П <%= flash[:alert] %></p>
  </div>
<% end %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name),
    html: { class: "max-w-md mx-auto bg-white p-10 rounded-2xl shadow-xl border border-gray-200 space-y-6 transition" }) do |f| %>

  <!-- Email -->
  <div>
    <%= f.label :email, class: "block text-sm font-semibold text-gray-700 mb-1" %>
    <%= f.email_field :email,
          autofocus: true,
          autocomplete: "email",
          placeholder: "admin@example.com",
          class: "w-full border border-gray-300 rounded-lg px-4 py-2 shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition" %>
  </div>

  <!-- Password -->
  <div>
    <%= f.label :password, class: "block text-sm font-semibold text-gray-700 mb-1" %>
    <%= f.password_field :password,
          autocomplete: "current-password",
          placeholder: "тАвтАвтАвтАвтАвтАвтАвтАв",
          class: "w-full border border-gray-300 rounded-lg px-4 py-2 shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition" %>
  </div>

  <!-- Remember Me -->
  <% if devise_mapping.rememberable? %>
    <div class="flex items-center text-sm">
      <%= f.check_box :remember_me, class: "mr-2 rounded text-blue-600 focus:ring-blue-500" %>
      <%= f.label :remember_me, class: "text-gray-600" %>
    </div>
  <% end %>

  <!-- Submit Button -->
  <div>
    <%= f.submit "Log in",
          class: "w-full bg-gradient-to-r from-blue-600 to-purple-600 text-white font-bold py-2 px-4 rounded-lg hover:from-blue-700 hover:to-purple-700 shadow-md transition duration-200" %>
  </div>

<% end %>
