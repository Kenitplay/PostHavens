<% content_for :title, "Edit Site Settings" %>

<div class="max-w-xl mx-auto mt-10 bg-white p-8 rounded-xl shadow-lg border border-gray-200">
  <h1 class="text-2xl font-bold text-gray-800 mb-6">Edit Site Settings</h1>

  <%= form_with url: site_settings_path, method: :put, local: true, multipart: true do %>
    <!-- Site Title -->
    <div>
      <label for="site_title" class="block text-sm font-medium text-gray-700 mb-1">Site Name</label>
      <input type="text" name="site_title" id="site_title"
        value="<%= @title_setting.value %>"
        class="w-full border border-gray-300 rounded-md p-2 shadow-sm focus:outline-none focus:ring focus:border-blue-500">
    </div>

    <!-- Site Logo -->
    <div class="mt-4">
      <label for="site_logo" class="block text-sm font-medium text-gray-700 mb-2">Site Logo</label>
      <input type="file" name="site_logo" id="site_logo"
        class="w-full text-sm text-gray-700 border border-gray-300 rounded-md p-2">

      <% if @logo_setting&.file&.attached? %>
        <div class="mt-4">
          <p class="text-xs text-gray-500 mb-1">Current logo:</p>
          <%= image_tag url_for(@logo_setting.file), class: "rounded shadow border h-20 w-20 object-cover" %>
        </div>
      <% end %>
    </div>

    <!-- Submit -->
    <div class="mt-6">
      <button type="submit"
        class="w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 transition">Update Settings</button>
    </div>
  <% end %>
</div>
