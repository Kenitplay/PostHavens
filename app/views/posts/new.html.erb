<% content_for :title, "New Post" %>

<div class="max-w-4xl mx-auto px-4">
  <div class="bg-gradient-to-r from-blue-50 to-white rounded-2xl shadow-lg p-8 border border-blue-100">
    
    <!-- Heading -->
    <h1 class="text-4xl font-extrabold text-blue-700 mb-6 flex items-center gap-2">
      📝 New Post
    </h1>

    <!-- Form Partial -->
    <div class="mb-6">
      <%= render "form", post: @post %>
    </div>

    <!-- Back Link -->
    <%= link_to "← Back to Posts", posts_path,
        class: "inline-block text-blue-600 font-medium text-sm hover:underline transition" %>
  </div>
</div>
