<% content_for :title, "Editing Post" %>

<div class="max-w-4xl mx-auto px-6">
  <h1 class="text-4xl font-extrabold text-gray-900 mb-8 text-center tracking-tight">
    ✏️ Edit Blog Post
  </h1>

  <div class="bg-white border border-blue-100 rounded-2xl shadow-2xl p-8 transition-all hover:shadow-blue-100">
    <%= render "form", post: @post %>

    <div class="mt-8 flex flex-col sm:flex-row items-center justify-between text-sm font-medium text-blue-600 space-y-3 sm:space-y-0 sm:space-x-6">
      <%= link_to "← View This Post", @post, class: "hover:underline hover:text-blue-800 transition" %>
      <%= link_to "← Back to All Posts", posts_path, class: "hover:underline hover:text-blue-800 transition" %>
    </div>
  </div>
</div>
